{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "SPOT Server",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["start"],
      "outputCapture": "std"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "SPOT Client",
      "url": "${env:RENDER_EXTERNAL_URL || http://localhost:${env:PORT || 1781}}",
      "webRoot": "${workspaceFolder}/src/analysis/public",
      "outputCapture": "std"
    }
  ]
}
